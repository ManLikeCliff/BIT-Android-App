<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EmployeeBioDataApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/edit_text</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Customize your theme here. -->
    <style name="editText">
        <item name="editTextColor">@color/edit_text</item>
    </style>

    <style name="MyDatePicker" >
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Divider color -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!-- Menu Style -->
    <style name="navigationTheme">

        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/purple_500</item>
        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">@color/black</item>
    </style>
</resources>